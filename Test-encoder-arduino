#include <ArduinoHardware.h>
#include <Encoder.h>

#define PWM_L 5
#define PWM_R 7
// #define EN1_L 32
// #define EN2_L 33
// #define EN1_R 30
// #define EN2_R 31

volatile int count = 0;

void setup() {

  Serial.begin(9600);
  pinMode(PWM_L, OUTPUT);
  // pinMode(EN1_L,OUTPUT);
  // pinMode(EN2_L,OUTPUT);
  pinMode(PWM_R, OUTPUT);
  // pinMode(EN1_R,OUTPUT);
  // pinMode(EN2_R,OUTPUT);

  //------------------- Setup Encoder -----------------------------
  pinMode(2, INPUT_PULLUP);
  attachInterrupt(digitalPinToInterrupt(2), check, RISING);



  //Set Left
  // analogWrite(PWM_L,0);
  //   digitalWrite(EN1_L,0);
  // digitalWrite(EN2_L,0);

  // //Set Right
  // analogWrite(PWM_R,0);
  // digitalWrite(EN2_R,0);
  // digitalWrite(EN1_R,0);
}

void stop() {
  analogWrite(PWM_L, 0);
  analogWrite(PWM_R, 0);
}



void check() {
  count++;
  Serial.println(count, DEC);
}

void loop() {

  stop();
}
